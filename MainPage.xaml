<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiSaveUpDesktop.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0">

            <Image
                Source="logo.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Picker x:Name="MyPicker"  SelectedItem="{Binding SelectedItem, Mode=TwoWay}"  ItemsSource="{Binding Kategorie}"/>

            <Label Text="Artikelname" />

            <Entry x:Name="Name" Text="{Binding Save.ArtikelName, Mode=TwoWay}"
                   Keyboard="Chat"
                   Placeholder="Name" />
            <Label Text="Preis" />

            <Entry x:Name="Betrag" Text="{Binding Save.Betrag, Mode=OneWayToSource}"
                   Keyboard="Numeric"
                   Placeholder="Preis" />
            <Button
                x:Name="ErfasseneBtn"
                Text="Erfassen"
                Command="{Binding _addCommand}" />
            <Button
                x:Name="ResultateBtn"
                Text="Resultate"
                Command="{Binding _getToResultCommand}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
