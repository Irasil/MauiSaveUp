<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiSaveUpDesktop.Views.Resultate"
             Title="Resultate">
    <VerticalStackLayout Spacing="25"
            Padding="30,0">

        <Picker x:Name="MyPickerResult"  SelectedItem="{Binding SelectedItem, Mode=TwoWay}"  ItemsSource="{Binding KategorieResultate , Mode=TwoWay}" SelectedIndexChanged="MyPicker_SelectedIndexChanged"/>

        <Border>
            <ScrollView HeightRequest="400" >
                <ListView x:Name="ListView" ItemsSource="{Binding SaveList}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="2*" />
                                        <RowDefinition Height="1*" />
                                    </Grid.RowDefinitions>
                                    <Label Text="{Binding ArtikelName}"
                                   Margin="5" />
                                    <Label Text="{Binding Betrag , StringFormat='{}{0:0.00} CHF'}"
                                   Grid.Column="1"
                                   HorizontalTextAlignment="End"
                                   FontAttributes="Bold"
                                   Margin="5,5,10,5" />
                                    <Label Text="{Binding Datum, StringFormat='{}{0:dd/MM/yyyy}'}"
                                   FontSize="8"
                                   Margin="5,0,0,0"
                                   Grid.Row="1"></Label>
                                    <Label Text="{Binding Kategorie}"
                                   FontSize="8"
                                   Margin="0,0,6,0"
                                   Grid.Row="1" Grid.Column="1"
                                   HorizontalTextAlignment="End"></Label>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollView>
        </Border>
        <Border>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Text="Total:"
                       Margin="5" />
                <Label Text="{Binding BetragTotal , StringFormat='{}{0} CHF'}"
                       Grid.Column="1"
                       HorizontalTextAlignment="End"
                       FontAttributes="Bold"
                       Margin="5,5,10,5" />

            </Grid>
        </Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Text="Alles" Command="{Binding _getCommand}" Grid.Column="0" Margin="10,10,0,10"></Button>
            <Button Text="Monat"
                    Command="{Binding _monatCommand}"
                    Grid.Column="1" Margin="10"></Button>
            <Button Text="Tag"
                    Command="{Binding _tagCommand}"
                    Grid.Column="2" Margin="0,10,10,10"></Button>
        </Grid>

        <Button Text="ZurÃ¼ck" Command="{Binding _backCommand}" />
    </VerticalStackLayout>
</ContentPage>