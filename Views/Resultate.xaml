<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiSaveUpDesktop.Views.Resultate"
             Title="Resultate">
    <VerticalStackLayout>

        
        <Picker x:Name="picker" Margin="20">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Alles</x:String>
                    <x:String>Nahrung</x:String>
                    <x:String>Ausgangt</x:String>
                    <x:String>Elektronik</x:String>
                </x:Array>
            </Picker.ItemsSource>
            <Picker.SelectedIndex>
                <x:Int32>0</x:Int32>
            </Picker.SelectedIndex>
        </Picker>

        <Border Margin="10">
        <ListView ItemsSource="{Binding Save, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>
                            <Label Text="{Binding ArtikelName}"
                                   Margin="5" />
                            <Label Text="{Binding Betrag , StringFormat='{}{0} CHF'}"
                                   Grid.Column="1"
                                   HorizontalTextAlignment="End"
                                   FontAttributes="Bold"
                                   Margin="5,5,10,5" />
                            <Label Text="{Binding Datum, StringFormat='{}{0:MM/dd/yyyy}'}"
                                   FontSize="8"
                                   Margin="5,0,0,0"
                                   Grid.Row="1"></Label>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Text="Alles" Grid.Column="0" Margin="10,10,0,10"></Button>
            <Button Text="Monat"
                    Grid.Column="1" Margin="10"></Button>
            <Button Text="Tag"
                    Grid.Column="2" Margin="0,10,10,10"></Button>
        </Grid>

        <Button Command="{Binding _backCommand}" />
    </VerticalStackLayout>
</ContentPage>